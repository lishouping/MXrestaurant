<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/sweet_dialog_bg_color" >
    <include layout="@layout/common_title"/>
    <ScrollView 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
     <LinearLayout 
         
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical">
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/orderde_co">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:gravity="center|left"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" >

            <TextView
                android:id="@+id/tv_table_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:text="桌号:200"
                android:textSize="15sp" />

            <!-- <TextView
                android:id="@+id/tv_person_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="用餐人数:10"
                android:textSize="15sp" /> -->
        </LinearLayout>
        
    </LinearLayout>
	<LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1.2"
                        android:text="菜品信息"
                        android:textColor="@color/suborder_color"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="0.2"
                        android:text="单价"
                         android:gravity="center"
                        android:textColor="@color/suborder_color"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/number"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="0.2"
                        android:text="数量"
                         android:gravity="center"
                        android:textColor="@color/suborder_color"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_totalprice"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:text="价格"
                        android:textColor="@color/suborder_color"
                        android:textSize="12sp" />
                </LinearLayout>
                
                <View 
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/orderde_co"
                    />
        <com.tnktech.weight.TNKListView
            android:id="@+id/lv_order_dinner"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        </com.tnktech.weight.TNKListView>
    </LinearLayout>
    
		<LinearLayout 
        	android:layout_width="fill_parent"
        	android:layout_height="40dp"
        	android:orientation="horizontal"
        	android:gravity="center_vertical"
        	android:background="@color/gray_btn_bg_color"
        	>
        	<TextView 
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:layout_marginLeft="15dp"
        	    android:textSize="15sp"
        	    android:text="备注:"/>
        	<EditText 
        	    android:id="@+id/edit_bzi"
        	    android:layout_width="0dp"
        	    android:layout_weight="1"
        	    android:layout_height="wrap_content"
        	    android:hint="可输入顾客对菜品的个性要求"
        	    android:textSize="15sp"
        	    android:background="@null"
        	    android:layout_marginRight="5dp"/>
    	</LinearLayout>
	
    </LinearLayout>
	</ScrollView>

	<LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:orientation="vertical"
        >
         <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center|right"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|right"
                android:layout_marginRight="5dp"
                android:text="总计:"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_subtotalprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:textColor="@color/red_color"
                android:textSize="13sp" />
        </LinearLayout>
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">
            <Button 
                android:id="@+id/btn_add_food"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textColor="@color/button_text_color"
                android:text="加菜"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shape_blule_btnbg"/>
            <View 
                android:layout_width="5dp"
                android:layout_height="fill_parent"/>
            <Button 
                android:id="@+id/btn_writing_food"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="叫起"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                 android:textColor="@color/button_text_color"
                android:background="@color/main_bg_color"
                android:visibility="gone"/>
            <Button 
                android:id="@+id/btn_sub_order"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="确认下单"
                android:layout_marginRight="5dp"
                 android:textColor="@color/button_text_color"
                android:background="@drawable/shape_yeallo_btnbg"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
