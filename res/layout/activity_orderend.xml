<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <include layout="@layout/common_title" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
            >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/orderde_co"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_order_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:text="订单编号:MX2017u812892189"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_table_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="桌号:200"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_person_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="用餐人数:10"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_service_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:text="下单时间:2017-09-09 22:00"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_beizhu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="备注:少盐"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical" >
<LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1.2"
                        android:text="菜品信息"
                        android:textColor="@color/suborder_color"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="0.2"
                        android:text="单价"
                         android:gravity="center"
                        android:textColor="@color/suborder_color"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/number"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="0.2"
                        android:text="数量"
                         android:gravity="center"
                        android:textColor="@color/suborder_color"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_totalprice"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:text="价格"
                        android:textColor="@color/suborder_color"
                        android:textSize="12sp" />
                </LinearLayout>
                
                <View 
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/orderde_co"
                    />
                <com.tnktech.weight.TNKListView
                    android:id="@+id/lv_order_dinner"
                    android:layout_width="fill_parent"
                    android:divider="@color/orderde_co"
                    android:layout_height="fill_parent" >
                </com.tnktech.weight.TNKListView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:gravity="center|right"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|right"
                android:layout_marginRight="5dp"
                android:text="总计:"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_ordertotal_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:textColor="@color/red_color"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp" >

            <Button
                android:id="@+id/btn_add_food"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@color/main_bg_color"
                android:text="加菜"
                android:textColor="@color/button_text_color"
                android:textSize="13sp" 
                android:visibility="invisible"
                android:layout_marginRight="10sp"/>

            <!-- <Button
                android:id="@+id/btn_writing_food"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@color/main_bg_color"
                android:text="叫起"
                android:textColor="@color/button_text_color"
                android:textSize="13sp" /> -->

            <Button
                android:id="@+id/btn_dayin_order"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_yeallo_btnbg"
                android:text="打印订单"
                android:textColor="@color/button_text_color"
                android:textSize="13sp" 
		        android:layout_marginRight="5dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>