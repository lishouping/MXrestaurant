<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include layout="@layout/common_title"/>
    <ScrollView 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
     <LinearLayout 
         
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical">
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_login_bg">
        <TextView
            android:id="@+id/tv_order_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:text="订单编号:MX2017u812892189"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/tv_table_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="桌号:200"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_person_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="用餐人数:10"
                android:textSize="15sp" />
        </LinearLayout>
        
        <TextView
                android:id="@+id/tv_service_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:text="推送时间:2017-09-09 22:00"
                android:textSize="15sp" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp" 
            >
            <TextView
                android:id="@+id/tv_beizhu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:text="备注:少盐"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
	<LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <com.tnktech.weight.TNKListView
            android:id="@+id/lv_order_dinner"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        </com.tnktech.weight.TNKListView>
    </LinearLayout>
    
		<LinearLayout 
        	android:layout_width="fill_parent"
        	android:layout_height="40dp"
        	android:orientation="horizontal"
        	android:gravity="center_vertical"
        	android:background="@color/gray_btn_bg_color"
        	>
        	<TextView 
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:layout_marginLeft="5dp"
        	    android:textSize="15sp"
        	    android:text="备注:"/>
        	<EditText 
        	    android:id="@+id/edit_bzi"
        	    android:layout_width="0dp"
        	    android:layout_weight="1"
        	    android:layout_height="wrap_content"
        	    android:hint="可输入顾客对菜品的个性要求"
        	    android:textSize="15sp"
        	    android:background="@null"
        	    android:layout_marginRight="5dp"/>
    	</LinearLayout>
	
    </LinearLayout>
	</ScrollView>

	<LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:orientation="vertical"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="总计:123.00元"
            android:layout_gravity="center_horizontal|right"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"/>
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">
            <Button 
                android:id="@+id/btn_add_food"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textColor="@color/button_text_color"
                android:text="加菜"
                android:background="@color/main_bg_color"/>
            <Button 
                android:id="@+id/btn_writing_food"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="叫起"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                 android:textColor="@color/button_text_color"
                android:background="@color/main_bg_color"/>
            <Button 
                android:id="@+id/btn_sub_order"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="确认下单"
                 android:textColor="@color/button_text_color"
                android:background="@color/main_bg_color"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
